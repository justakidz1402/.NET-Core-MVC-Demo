@model UpdateBookViewModel
@{
    ViewData["Title"] = "Update Book";
}

<h1>Update Book</h1>

<div class="card" style="padding: 20px">
    <form method="post" asp-action="Update" class="row g-3" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-md-6">
            <label class="form-label">Title</label>
            <input placeholder="Enter Book's Title" type="text" class="form-control" asp-for="Title" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">Author</label>
            <input placeholder="Enter Book's Author" type="text" class="form-control" asp-for="Author" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">Publisher</label>
            <input placeholder="Enter Book's Publisher" type="text" class="form-control" asp-for="Publisher" required>
        </div>
        <div class="col-md-6">
            <label class="form-label">Price</label>
            <input placeholder="Enter Book's Price" type="number" class="form-control" asp-for="Price" required>
        </div>
        <div class="col-md-3">
            <label class="form-label">Image</label>
            <input asp-for="ImageFile" type="file" class="form-control" required />
        </div>
        <div class="col-md-3">
            <label for="" class="form-label">Created</label>
            <input type="date" class="form-control" asp-for="Created" required>
        </div>
        <div class="col-md-3">
            <label for="" class="form-label">Category</label>
            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control" required>
                <option value="">-- Select Category --</option>
            </select>
        </div>
        <div class="col-md-3">
            <label for="" class="form-label">Quantity</label>
            <input type="number" class="form-control" asp-for="Quantity" required>
        </div>
        <div class="col-md-12">
            <label class="form-label">Description</label>
            <textarea class="form-control" placeholder="Enter Book's Description" type="text" asp-for="Description" style="height: 100px"></textarea>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
