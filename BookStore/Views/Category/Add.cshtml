@model AddCategoryViewModel
@{
    ViewData["Title"] = "Create Category";
}

<h1>Add Category</h1>

<div class="card" style="padding: 20px">
    <form method="post" action="Add" class="row g-3">
        <div class="col-md-12">
            <label class="form-label">Name</label>
            <input placeholder="Enter Category's Name" type="text" class="form-control" asp-for="Name" required>
        </div>
        <div class="col-md-12">
            <label class="form-label">Description</label>
            <textarea class="form-control" placeholder="Enter Category's Description" type="text" asp-for="Description" style="height: 100px"></textarea>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
